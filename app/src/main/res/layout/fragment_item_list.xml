<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/list"
        android:name="tufu.recyclervieweffectgather.TopGradualFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        app:layoutManager="LinearLayoutManager"
        tools:context="tufu.recyclervieweffectgather.TopGradualFragment"
        tools:listitem="@layout/fragment_item"/>

    <LinearLayout
        android:id="@+id/ll_slide_body"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#eeeeee"
        android:clickable="true"
        android:orientation="vertical"
        android:padding="50dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
        >
            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_centerInParent="true"
                android:text="渐变颜色（RGB）"
                android:textColor="@android:color/black"/>

            <ImageView
                android:id="@+id/image_view"
                android:layout_width="50dp"
                android:background="#000000"
                android:layout_toRightOf="@id/tv_title"
                android:layout_height="50dp"
                android:layout_gravity="center"
            />
        </RelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal"
        >

            <TextView
                android:id="@+id/r_tv_red_value"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:text="R(0)"
                android:textColor="@android:color/holo_green_dark"/>

            <SeekBar
                android:id="@+id/red_seekBar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:max="255"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal"
        >
            <TextView
                android:id="@+id/r_tv_green_value"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:text="G(0)"
                android:textColor="@android:color/holo_green_dark"/>

            <SeekBar
                android:id="@+id/green_seekBar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:max="255"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal"
        >
            <TextView
                android:id="@+id/r_tv_blue_value"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:text="B(0)"
                android:textColor="@android:color/holo_green_dark"/>

            <SeekBar
                android:id="@+id/blue_seekBar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:max="255"/>

        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
